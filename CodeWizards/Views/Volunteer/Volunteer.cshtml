<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        @@import url('https://fonts.googleapis.com/css?family=Raleway');
        /* Set the size of the div element that contains the map */

        body {
            background-color: #0F3643;
        }

        .full-height {
            height: 100%;
        }

        #map {
            height: 730px;
            width: 75%;
            margin-top: 30px;
            margin-bottom: 30px;
            zoom: 1;
            float: left;
            border-radius: 20px;
        }

        #btnUsluzi {
            position: absolute;
            width: 100px;
            height: 100px;
            border-radius: 20px;
            bottom: 7%;
            margin-left: 54%;
        }

        #userKartica {
            float: left;
            width: 25%;
            margin-left: -10%;
            margin-right: 6%;
            margin-top: 30px;
            margin-bottom: 30px;
            overflow-y: scroll;
            height: 730px;
        }

        .glavni {
            width: 120%;
            position: relative;
        }


        .stilKartice {
            height: fit-content();
            border-radius: 20px;
        }

        .userSlika {
            position: relative;
            padding-top: 20%;
            padding-left: 20%;
        }

        #btnShowRoute {
            margin-left: 25px;
            margin-top: 20px;
            margin-bottom: 20px;
            border-radius: 20px;
        }

        .listaLijekova {
            border: 1px solid lightgrey;
            border-radius: 20px;
            list-style-type: none;
            padding: 0;
        }

        .itemStil {
            border-bottom: 1px solid lightgrey;
            padding: 10px;
        }

        #userKartica::-webkit-scrollbar {
            display: none;
        }

            .itemStil:last-of-type {
                border-bottom: none;
            }
    </style>
    <script src="https://kit.fontawesome.com/3874a11e93.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>
<body>
    <div class="row glavni">
        <div id="userKartica">
            @for (int i = 0; i < ViewBag.Patients.Count; i++)
            {
                <div class="card mb-3 stilKartice" style="max-width: 540px">
                    <div class="row g-0">
                        <div class="col-md-4 dioSlikaButton">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/7e/Circle-icons-profile.svg/1200px-Circle-icons-profile.svg.png"
                                 alt="..."
                                 class="img-fluid userSlika" />
                            <button id="btnShowRoute" type="button" class="btn btn-secondary btn-md">
                                <i class="fas fa-route fa-2x"></i>
                            </button>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h4 class="card-title">@ViewBag.Patients[i].Name</h4>
                                <ul class="listaLijekova">
                                    @for (int j = 0; j < ViewBag.Medicine.Count; j++)
                                    {
                                        for (int k = 0; k < ViewBag.LinkList.Count; k++)
                                        {
                                            if (ViewBag.LinkList[k].PatientId == ViewBag.Patients[i].Id &&
                                                ViewBag.LinkList[k].MedicineId == ViewBag.Medicine[j].Id)
                                            {
                                                <li class="itemStil">@ViewBag.Medicine[j].Name</li>
                                            }
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div id="map"></div>
        <!--Hidden fileds so I can send data-->
        <form asp-action="Map" method="post">
            <div class="form-group">
                <input id="lat" name="lat" type="hidden" value="" />
                <input id="lon" name="lon" type="hidden" value="" />
            </div>
        </form>
        <button id="btnUsluzi" type="button" class="btn btn-secondary btn-lg">
            <i class="fas fa-people-carry fa-2x"></i>
            <h5>Usluži</h5>
        </button>
    </div>

    <script>var map;

        function initMap() {
            geocoder = new google.maps.Geocoder();
            // The location of Sarajevo
            var sarajevo = { lat: 43.8563, lng: 18.4131 };
            // The map, centered at Sarajevo
            map = new google.maps.Map(document.getElementById('map'), { zoom: 14, center: sarajevo });
        }</script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.10.2.js"></script>

    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBd7K5-Z6imkbJEje_G9aPqEL65uUiOFfc&callback=initMap"></script>


    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>